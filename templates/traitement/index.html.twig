{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Gestion des traitements{% endblock %}

{% block body %}
    <h1 class="h3 mb-2 text-gray-800">Gestion des traitements</h1>
    <p class="my-4"></p>
    <div class="card shadow mb-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row">
            <div class="col-md-8">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Liste</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                            <tr class="text-center">
                                <th>#</th>
                                <th>Noms</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for traitement in traitements %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ traitement.libelle }}</td>
                                    <td class="text-center">
                                        <a href="{{ absolute_url(path('traitement_edit', {'slug': traitement.slug})) }}">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Enregistrement</h6>
                </div>
                <div class="card-body">
                    {{ include('traitement/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ absolute_url(asset('assets/vendor/datatables/datatables.min.css')) }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ absolute_url(asset('assets/vendor/datatables/datatables.min.js')) }}"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "lengthMenu": "Affichage _MENU_ par page",
                    "zeroRecords": "Aucun enregistrement",
                    "infoEmpty": "Aucun enregistrement disponible",
                    "infoFiltered": "(filtered from _MAX_ total records)"
                },
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ]
            });
        } );
    </script>
{% endblock %}

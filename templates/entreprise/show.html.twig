{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} Gestion des entreprises{% endblock %}

{% block body %}
    <h1 class="h3 mb-2 text-gray-800">Gestion des entreprises</h1>
    <p class="my-4"></p>
    <div class="card shadow mb-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show m-3 p-3" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <div class="card-header py-3">
                    <div class="py-1">
                        <a href="{{ absolute_url(path('entreprise_edit',{'id': entreprise.id})) }}" class="btn btn-primary" style="float: right">
                            <i class="fas fa-edit"></i> Modifier
                        </a>
                    </div>
                    <h6 class="m-0 font-weight-bold text-primary">{{ entreprise.nom|upper }} </h6>
                </div>
                <div class="card-body">
                    <div class="row form-group">
                        <div class="col-8 justify-content-center align-items-center">
                            <div class="row justify-content-center align-items-center">
                                <div class="col-12">
                                    <label for="">Nom de l'Entreprise</label>
                                    <input type="text" class="form-control" value="{{ entreprise.nom }}" readonly>
                                </div>
                                <div class="col-12 mt-3">
                                    <label for="">Localisation</label>
                                    <input type="text" class="form-control" value="{{ entreprise.localisation }}" readonly>
                                </div>
                                <div class="col-12 mt-3">
                                    <label for="">Adresse</label>
                                    <input type="text" class="form-control" value="{{ entreprise.adresse }}" readonly>
                                </div>
                                <div class="col-6 mt-3">
                                    <label for="">Telephone</label>
                                    <input type="text" class="form-control" value="{{ entreprise.tel }}" readonly>
                                </div>
                                <div class="col-6 mt-3">
                                    <label for="">Cellulaire</label>
                                    <input type="text" class="form-control" value="{{ entreprise.cel }}" readonly>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <img src="{{ absolute_url(asset('upload/'~ entreprise.media)) }}" alt="{{ entreprise.nom }}" class="img-fluid">
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
{% endblock %}

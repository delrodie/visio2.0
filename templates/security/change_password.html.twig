{% extends 'security_layout.html.twig' %}

{% block title %}SECURITE :: Mise a jour du mot de passe{% endblock %}

{% block body %}
    <div class="p-5">
        <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">VISIO+ 2.0</h1>
        </div>
        <h1 class="h3 mb-3 font-weight-normal">Mot de passe</h1>
        {{ form_start(form) }}
        <div class="form-group">{{ form_row(form.username) }}</div>
        <div class="form-group">{{ form_row(form.password) }}</div>
        {{ form_widget(form) }}
        <div class="text-end mt-5">
            <button class="btn btn-primary btn-user btn-block" type="submit">Modifier </button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

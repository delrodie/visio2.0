{% extends 'base.html.twig' %}

{% block title %}Facture index{% endblock %}

{% block body %}
    <h1>Facture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero</th>
                <th>MontantHt</th>
                <th>Remise</th>
                <th>Tva</th>
                <th>MontantTTC</th>
                <th>Accompte</th>
                <th>Rap</th>
                <th>PartAssurance</th>
                <th>Date</th>
                <th>Odcyl</th>
                <th>OdAxe</th>
                <th>OdAdd</th>
                <th>OdQte</th>
                <th>OdMontant</th>
                <th>OdSph</th>
                <th>OgCyl</th>
                <th>OgAxe</th>
                <th>OgAdd</th>
                <th>OgQte</th>
                <th>OgMontant</th>
                <th>OgSph</th>
                <th>PrixMonture</th>
                <th>Statut</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for facture in factures %}
            <tr>
                <td>{{ facture.id }}</td>
                <td>{{ facture.numero }}</td>
                <td>{{ facture.montantHt }}</td>
                <td>{{ facture.remise }}</td>
                <td>{{ facture.tva }}</td>
                <td>{{ facture.montantTTC }}</td>
                <td>{{ facture.accompte }}</td>
                <td>{{ facture.rap }}</td>
                <td>{{ facture.partAssurance }}</td>
                <td>{{ facture.date }}</td>
                <td>{{ facture.odcyl }}</td>
                <td>{{ facture.odAxe }}</td>
                <td>{{ facture.odAdd }}</td>
                <td>{{ facture.odQte }}</td>
                <td>{{ facture.odMontant }}</td>
                <td>{{ facture.odSph }}</td>
                <td>{{ facture.ogCyl }}</td>
                <td>{{ facture.ogAxe }}</td>
                <td>{{ facture.ogAdd }}</td>
                <td>{{ facture.ogQte }}</td>
                <td>{{ facture.ogMontant }}</td>
                <td>{{ facture.ogSph }}</td>
                <td>{{ facture.prixMonture }}</td>
                <td>{{ facture.statut ? 'Yes' : 'No' }}</td>
                <td>{{ facture.createdAt ? facture.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ facture.updatedAt ? facture.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('facture_show', {'id': facture.id}) }}">show</a>
                    <a href="{{ path('facture_edit', {'id': facture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="27">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('facture_new') }}">Create new</a>
{% endblock %}

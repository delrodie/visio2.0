<form action="#" method="post">
    <div class="row">
        <div class="col-md-6 mt-3">
            <label for="">Nom & Prenoms</label>
            <input type="text" class="form-control" value="{{ facture.client.nom }} {{ facture.client.prenoms }}" readonly>
        </div>
        <div class="col-md-3 mt-3">
            <label for="">N° Client</label>
            <input type="text" class="form-control" value="{{ facture.client.matricule }}" readonly>
        </div>
        <div class="col-md-3 mt-3">
            <label for="">Date</label>
            <input type="text" class="form-control" value="{{ facture.date|date('d-m-Y') }}" readonly>
        </div>
        <div class="col-md-3 mt-3">
            <label for="">Sexe</label>
            <input type="text" class="form-control" value="{{ facture.client.sexe }}" readonly>
        </div>
        <div class="col-md-3 mt-3">
            <label for="">Contact</label>
            <input type="text" class="form-control" value="{{ facture.client.cel }}" readonly>
        </div>
        <div class="col-md-6 mt-3">
            <label for="">Assurance</label>
            <input type="text" class="form-control" value="{{ facture.assurance.nom }}" readonly>
        </div>
        {% if facture.monture %}
            <div class="col-md-6 mt-3">
                <label for="">Monture</label>
                <input type="text" class="form-control" value="{{ facture.monture.marque }} {{ facture.monture.reference }}" readonly>
            </div>
            <div class="col-md-3 mt-3">
                <label for="">Montant</label>
                <input type="text" class="form-control" value="{{ facture.prixMonture }}" readonly>
            </div>
        {% endif %}
        {% if facture.typeVerre %}
            <div class="col-md-2 mt-3">
                <label for="">OD Cylindre</label>
                <input type="text" class="form-control" value="{{ facture.odcyl}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OD Sphère</label>
                <input type="text" class="form-control" value="{{ facture.odSph}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OD Axe</label>
                <input type="text" class="form-control" value="{{ facture.odAxe}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OD Add</label>
                <input type="text" class="form-control" value="{{ facture.odAdd}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OD Quantité</label>
                <input type="text" class="form-control" value="{{ facture.odQte}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OD Montant</label>
                <input type="text" class="form-control" value="{{ facture.odMontant}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OG Cylindre</label>
                <input type="text" class="form-control" value="{{ facture.ogCyl}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OG Sphère</label>
                <input type="text" class="form-control" value="{{ facture.ogSph}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OG Axe</label>
                <input type="text" class="form-control" value="{{ facture.ogAxe}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OG Add</label>
                <input type="text" class="form-control" value="{{ facture.ogAdd}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OG Quantite</label>
                <input type="text" class="form-control" value="{{ facture.ogQte}}" readonly>
            </div>
            <div class="col-md-2 mt-3">
                <label for="">OG Montant</label>
                <input type="text" class="form-control" value="{{ facture.ogMontant}}" readonly>
            </div>
            <div class="col-md-6 mt-3">
                <label for="">Type de verre</label>
                <input type="text" class="form-control" value="{{ facture.typeVerre.libelle }}" readonly>
            </div>
            <div class="col-md-3 mt-3">
                {% set total_verre = facture.ogMontant + facture.odMontant %}
                <label for="">Montant Verre</label>
                <input type="text" class="form-control" value="{{ total_verre}}" readonly>
            </div>
        {% endif %}
        <div class="col-md-3 mt-3">
            <label for="">Montant Total</label>
            <input type="text" class="form-control" value="{{ facture.montantHt }}" readonly id="montantTotal">
        </div>
        <div class="col-md-3 mt-3">
            <label for="">Reduction</label>
            <input type="text" name="facture_remise" class="form-control" id="remise">
        </div>
        <div class="col-md-3 mt-3">
            <label for="">Part assurance</label>
            <input type="text" name="facture_assurance" class="form-control" id="assurance">
        </div>
        <div class="col-md-3 mt-3">
            <label for="">Acompte</label>
            <input type="text" name="facture_acompte" class="form-control" id="acompte">
        </div>
        <div class="col-md-3 mt-3">
            <label for="">Reste à payer</label>
            <input type="text" name="facture_resteAPayer" class="form-control" readonly id="resteAPayer">
        </div>
        <div class="col-md-8 offset-md-4 text-right" style="font-size: 0.9rem; font-style: italic; color: darkred">
            <div id="errors"></div>
        </div>

        <div class="col-md-8 offset-md-2 mt-5">

            <div class="text-right">
                <input type="hidden" name="facture_id" value="{{ facture.id }}">
                <a href="{{ absolute_url(path('client_index') )}}" class="btn btn-outline-secondary">Annuler</a>
                <button class="btn btn-primary">{{ button_label|default('Valider') }}</button>
            </div>
        </div>
    </div>
</form>



{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} Gestion des montures{% endblock %}

{% block body %}
    <h1 class="h3 mb-2 text-gray-800">Gestion des montures</h1>
    <p class="my-4"></p>
    <div class="card shadow mb-4">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} alert-dismissible fade show m-3 p-3" role="alert">
                    {{ message }}
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <div class="card-header py-3">
                    <div class="py-1">
                        <a href="{{ absolute_url(path('monture_index')) }}" class="btn btn-primary" style="float: right">
                            <i class="fas fa-list"></i> Liste
                        </a>
                    </div>
                    <h6 class="m-0 font-weight-bold text-primary">Enregistrement</h6>
                </div>
                <div class="card-body">
                    {{ include('monture/_form.html.twig', {'button_label': 'Modifier'}) }}

                    {{ include('monture/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
